@model LoginRegistration.Models.Register

<div class="container">
        <div class="forms" >

            <form asp-action="SubmitRegister" asp-controller="User" method="post">
                <div class="row">
                <span asp-validation-for="First_Name"></span>
                <label asp-for="First_Name"></label>
                <input asp-for="First_Name">
                </div>

                <div class="row">
                <span asp-validation-for="Last_Name"></span>
                <label asp-for="Last_Name"></label>
                <input asp-for="Last_Name">
                </div>
                
                <div class="row">
                <span asp-validation-for="Email"></span>
                <label asp-for="Email"></label>
                <input asp-for="Email">
                </div>

            

                <div class="row">
                <span asp-validation-for="Password"></span>
                <label asp-for="Password"></label>
                <input asp-for="Password">
                </div>

                <div class="row">
                <input value="Add User" type="submit">
                </div>
            </form>

        </div>