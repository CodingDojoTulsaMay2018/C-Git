

@{
    ViewData["Title"] = "Login/Register";
}
@model ViewModel
<nav class="navbar navbar-light bg-light justify-content-between">
  <a class="nav-link" href="/">Home</a>
  <a class="nav-link" href="Register">Register</a>
</nav>

<div class="container">
    <div id="wrapper">
        <div class="row">

            <div class="col-lg-6">
                <h3 class="display-4">Login</h3>
                <form asp-action="Login" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label for="Email">Email address</label>
                        <span class="error" asp-validation-for="loginUser.Email"></span>
                        <input type="text" class="form-control" asp-for="loginUser.Email">
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <span class="error" asp-validation-for="loginUser.Password"></span>
                        <input type="password" class="form-control" asp-for="loginUser.Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>