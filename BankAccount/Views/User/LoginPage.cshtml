    <div class="forms" >
@model User
            <form asp-action="ValidLogin" asp-controller="User" method="post">              
                <div class="row">
                <span asp-validation-for="Email"></span>
                <label asp-for="Email"></label>
                <input asp-for="Email">
                </div>

                <div class="row">
                <span asp-validation-for="Password"></span>
                <label asp-for="Password"></label>
                <input asp-for="Password">
                </div>

                <div class="row">
                <input value="Login" type="submit">
                </div>
            </form>
            <li><a asp-area="" asp-controller="User" asp-action="Index">Need to Register?</a></li>
    </div>