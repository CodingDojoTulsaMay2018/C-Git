@{
    ViewData["Title"] = "Home Page";
}
@model User
    <div class="container">
        <div class="forms" >

            <form asp-action="Register" asp-controller="User" method="post">
                <div class="row">
                <span asp-validation-for="First_Name"></span>
                <label asp-for="First_Name"></label>
                <input asp-for="First_Name">
                </div>

                <div class="row">
                <span asp-validation-for="Last_Name"></span>
                <label asp-for="Last_Name"></label>
                <input asp-for="Last_Name">
                </div>
                
                <div class="row">
                <span asp-validation-for="Email"></span>
                <label asp-for="Email"></label>
                <input asp-for="Email">
                </div>

            

                <div class="row">
                <span asp-validation-for="Password"></span>
                <label asp-for="Password"></label>
                <input asp-for="Password">
                </div>

                <div class="row">
                <span asp-validation-for="ConfirmPassword"></span>
                <label asp-for="ConfirmPassword">Confirm Password:</label>
                <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword">
                </div>



                <div class="row">
                <input value="Add User" type="submit">
                </div>
            </form>
            <a asp-area="" asp-controller="User" asp-action="LoginPage">Already Registered?</a>

        </div>